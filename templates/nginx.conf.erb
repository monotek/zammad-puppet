# this is the nginx config for zammad
#

upstream zammad-<%= @zammad_instance_name %> {
    server localhost:<%= @zammad_rails_port %>;
}

upstream zammad-websocket-<%= @zammad_instance_name %> {
    server localhost:<%= @zammad_websocket_port %>;
}

server {
    listen 80;

    # replace 'localhost' with your fqdn if you want to use zammad from remote
    server_name <%= @zammad_domain %>;

    root <%= @zammad_home_directory %>/public;

    access_log /var/log/nginx/zammad-<%= @zammad_instance_name %>.access.log;
    error_log  /var/log/nginx/zammad-<%= @zammad_instance_name %>.error.log;

    client_max_body_size 50M;

    location ~ ^/(assets/|robots.txt|humans.txt|favicon.ico) {
        expires max;
    }

    location /ws {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header CLIENT_IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 86400;
        proxy_pass http://zammad-websocket-<%= @zammad_instance_name %>;
    }

    location / {
        proxy_set_header Host $http_host;
        proxy_set_header CLIENT_IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_read_timeout 180;
        proxy_pass http://zammad-<%= @zammad_instance_name %>;

        gzip on;
        gzip_types text/plain text/xml text/css image/svg+xml application/javascript application/x-javascript application/json application/xml;
        gzip_proxied any;
    }
}
